<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zdf.auth.mapper.BBanksMapper">

    <!-- 通用查询映射结果ss -->
    <resultMap id="BaseResultMap" type="com.zdf.auth.model.po.BBanks">
        <id column="id" property="id" />
        <result column="bank_name" property="bankName" />
        <result column="bank_code" property="bankCode" />
        <result column="swift_code" property="swiftCode" />
        <result column="account_number" property="accountNumber" />
        <result column="branch" property="branch" />
        <result column="address" property="address" />
        <result column="manager" property="manager" />
        <result column="tel" property="tel" />
        <result column="account_name" property="accountName" />
        <result column="account_no" property="accountNo" />
        <result column="currency_name" property="currencyName" />
        <result column="bank_area" property="bankArea" />
        <result column="remark" property="remark" />
        <result column="crt_by" property="crtBy" />
        <result column="create_by_name" property="createByName" />
        <result column="crt_by_dtm" property="crtByDtm" />
        <result column="mdy_by" property="mdyBy" />
        <result column="mdy_by_name" property="mdyByName" />
        <result column="mdy_by_dtm" property="mdyByDtm" />
        <result column="is_deleted" property="isDeleted" />
        <result column="voided_by" property="voidedBy" />
        <result column="voided_by_name" property="voidedByName" />
        <result column="voided_by_dtm" property="voidedByDtm" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
            id, bank_name, bank_code, swift_code, account_number, branch, address, manager, tel, account_name, account_no, currency_name, bank_area, remark, crt_by, create_by_name, crt_by_dtm, mdy_by, mdy_by_name, mdy_by_dtm, is_deleted, voided_by, voided_by_name, voided_by_dtm
    </sql>

    <!-- 表名 -->
    <sql id="tname">b_banks </sql>

    <sql id="selects">
        SELECT <include refid="Base_Column_List"/>
        FROM <include refid="tname"/>
        <where>
            is_deleted = 0
            <if test="bBanks.bankName != null and bBanks.bankName != ''">
                AND bank_name LIKE CONCAT('%',#{bBanks.bankName},'%')
            </if>

            <if test="bBanks.bankCode != null and bBanks.bankCode != ''">
                AND bank_code LIKE CONCAT('%',#{bBanks.bankCode},'%')
            </if>

            <if test="bBanks.swiftCode != null and bBanks.swiftCode != ''">
                AND swift_code LIKE CONCAT('%',#{bBanks.swiftCode},'%')
            </if>

            <if test="bBanks.accountNumber != null and bBanks.accountNumber != ''">
                AND account_number LIKE CONCAT('%',#{bBanks.accountNumber},'%')
            </if>

            <if test="bBanks.branch != null and bBanks.branch != ''">
                AND branch LIKE CONCAT('%',#{bBanks.branch},'%')
            </if>

            <if test="bBanks.address != null and bBanks.address != ''">
                AND address LIKE CONCAT('%',#{bBanks.address},'%')
            </if>

            <if test="bBanks.manager != null and bBanks.manager != ''">
                AND manager LIKE CONCAT('%',#{bBanks.manager},'%')
            </if>

            <if test="bBanks.tel != null and bBanks.tel != ''">
                AND tel LIKE CONCAT('%',#{bBanks.tel},'%')
            </if>

            <if test="bBanks.accountName != null and bBanks.accountName != ''">
                AND account_name LIKE CONCAT('%',#{bBanks.accountName},'%')
            </if>

            <if test="bBanks.accountNo != null and bBanks.accountNo != ''">
                AND account_no LIKE CONCAT('%',#{bBanks.accountNo},'%')
            </if>

            <if test="bBanks.currencyName != null and bBanks.currencyName != ''">
                AND currency_name LIKE CONCAT('%',#{bBanks.currencyName},'%')
            </if>

            <if test="bBanks.bankArea != null and bBanks.bankArea != ''">
                AND bank_area LIKE CONCAT('%',#{bBanks.bankArea},'%')
            </if>

            <if test="bBanks.remark != null and bBanks.remark != ''">
                AND remark LIKE CONCAT('%',#{bBanks.remark},'%')
            </if>

            <if test="bBanks.crtBy != null ">
                AND crt_by = ${bBanks.crtBy}
            </if>

            <if test="bBanks.createByName != null and bBanks.createByName != ''">
                AND create_by_name LIKE CONCAT('%',#{bBanks.createByName},'%')
            </if>

            <if test="bBanks.crtByDtm != null ">
                AND crt_by_dtm = ${bBanks.crtByDtm}
            </if>

            <if test="bBanks.mdyBy != null ">
                AND mdy_by = ${bBanks.mdyBy}
            </if>

            <if test="bBanks.mdyByName != null and bBanks.mdyByName != ''">
                AND mdy_by_name LIKE CONCAT('%',#{bBanks.mdyByName},'%')
            </if>

            <if test="bBanks.mdyByDtm != null ">
                AND mdy_by_dtm = ${bBanks.mdyByDtm}
            </if>

            <if test="bBanks.voidedBy != null ">
                AND voided_by = ${bBanks.voidedBy}
            </if>

            <if test="bBanks.voidedByName != null and bBanks.voidedByName != ''">
                AND voided_by_name LIKE CONCAT('%',#{bBanks.voidedByName},'%')
            </if>

            <if test="bBanks.voidedByDtm != null ">
                AND voided_by_dtm = ${bBanks.voidedByDtm}
            </if>

        </where>
    </sql>

    <select id="pageList" resultMap="BaseResultMap" parameterType="com.zdf.auth.model.po.BBanks">
        <include refid="selects"/>
    </select>

    <select id="list" resultMap="BaseResultMap" parameterType="com.zdf.auth.model.po.BBanks">
        <include refid="selects"/>
    </select>




    <delete id="phyDelById">
        DELETE FROM  b_banks WHERE id = ${id}
    </delete>

    <update id="logicDel">
        UPDATE b_banks SET is_deleted = 1 ,update_by = #{username}, update_time = now()
        WHERE id = ${id} AND is_deleted = 0
    </update>

    <select id="queryBBanksForExcel" resultType="java.util.LinkedHashMap">
        SELECT
            id 'id',
            bank_name 'bankName',
            bank_code 'bankCode',
            swift_code 'swiftCode',
            account_number 'accountNumber',
            branch 'branch',
            address 'address',
            manager 'manager',
            tel 'tel',
            account_name 'accountName',
            account_no 'accountNo',
            currency_name 'currencyName',
            bank_area 'bankArea',
            remark 'remark',
            crt_by 'crtBy',
            create_by_name 'createByName',
            crt_by_dtm 'crtByDtm',
            mdy_by 'mdyBy',
            mdy_by_name 'mdyByName',
            mdy_by_dtm 'mdyByDtm',
            is_deleted 'isDeleted',
            voided_by 'voidedBy',
            voided_by_name 'voidedByName',
            voided_by_dtm 'voidedByDtm'
        FROM b_banks
        WHERE is_deleted = 0
                    <if test="bankName != null and bankName != ''">
                        AND bank_name LIKE CONCAT('%',#{bankName}, '%')
                    </if>
                    <if test="bankCode != null and bankCode != ''">
                        AND bank_code LIKE CONCAT('%',#{bankCode}, '%')
                    </if>
                    <if test="swiftCode != null and swiftCode != ''">
                        AND swift_code LIKE CONCAT('%',#{swiftCode}, '%')
                    </if>
                    <if test="accountNumber != null and accountNumber != ''">
                        AND account_number LIKE CONCAT('%',#{accountNumber}, '%')
                    </if>
                    <if test="branch != null and branch != ''">
                        AND branch LIKE CONCAT('%',#{branch}, '%')
                    </if>
                    <if test="address != null and address != ''">
                        AND address LIKE CONCAT('%',#{address}, '%')
                    </if>
                    <if test="manager != null and manager != ''">
                        AND manager LIKE CONCAT('%',#{manager}, '%')
                    </if>
                    <if test="tel != null and tel != ''">
                        AND tel LIKE CONCAT('%',#{tel}, '%')
                    </if>
                    <if test="accountName != null and accountName != ''">
                        AND account_name LIKE CONCAT('%',#{accountName}, '%')
                    </if>
                    <if test="accountNo != null and accountNo != ''">
                        AND account_no LIKE CONCAT('%',#{accountNo}, '%')
                    </if>
                    <if test="currencyName != null and currencyName != ''">
                        AND currency_name LIKE CONCAT('%',#{currencyName}, '%')
                    </if>
                    <if test="bankArea != null and bankArea != ''">
                        AND bank_area LIKE CONCAT('%',#{bankArea}, '%')
                    </if>
                    <if test="remark != null and remark != ''">
                        AND remark LIKE CONCAT('%',#{remark}, '%')
                    </if>
                    <if test="crtBy != null ">
                        AND crt_by = #{crtBy}
                    </if>
                    <if test="createByName != null and createByName != ''">
                        AND create_by_name LIKE CONCAT('%',#{createByName}, '%')
                    </if>
                    <if test="crtByDtm != null ">
                        AND crt_by_dtm = #{crtByDtm}
                    </if>
                    <if test="mdyBy != null ">
                        AND mdy_by = #{mdyBy}
                    </if>
                    <if test="mdyByName != null and mdyByName != ''">
                        AND mdy_by_name LIKE CONCAT('%',#{mdyByName}, '%')
                    </if>
                    <if test="mdyByDtm != null ">
                        AND mdy_by_dtm = #{mdyByDtm}
                    </if>
                    <if test="voidedBy != null ">
                        AND voided_by = #{voidedBy}
                    </if>
                    <if test="voidedByName != null and voidedByName != ''">
                        AND voided_by_name LIKE CONCAT('%',#{voidedByName}, '%')
                    </if>
                    <if test="voidedByDtm != null ">
                        AND voided_by_dtm = #{voidedByDtm}
                    </if>

    </select>

</mapper>
