<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zdf.auth.mapper.BBrandMapper">

    <!-- 通用查询映射结果ss -->
    <resultMap id="BaseResultMap" type="com.zdf.auth.model.po.BBrand">
        <id column="id" property="id" />
        <result column="en_name" property="enName" />
        <result column="ch_name" property="chName" />
        <result column="all_name" property="allName" />
        <result column="remark" property="remark" />
        <result column="crt_by" property="crtBy" />
        <result column="crt_by_name" property="crtByName" />
        <result column="crt_by_dtm" property="crtByDtm" />
        <result column="mdy_by" property="mdyBy" />
        <result column="mdy_by_name" property="mdyByName" />
        <result column="mdy_by_dtm" property="mdyByDtm" />
        <result column="voided" property="voided" />
        <result column="voided_by" property="voidedBy" />
        <result column="voided_by_name" property="voidedByName" />
        <result column="voided_by_dtm" property="voidedByDtm" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
            id, en_name, ch_name, all_name, remark, crt_by, crt_by_name, crt_by_dtm, mdy_by, mdy_by_name, mdy_by_dtm, voided, voided_by, voided_by_name, voided_by_dtm
    </sql>

    <!-- 表名 -->
    <sql id="tname">b_brand </sql>

    <sql id="selects">
        SELECT <include refid="Base_Column_List"/>
        FROM <include refid="tname"/>
        <where>
            voided = 0
            <if test="bBrand.enName != null and bBrand.enName != ''">
                AND en_name LIKE CONCAT('%',#{bBrand.enName},'%')
            </if>

            <if test="bBrand.chName != null and bBrand.chName != ''">
                AND ch_name LIKE CONCAT('%',#{bBrand.chName},'%')
            </if>

            <if test="bBrand.allName != null and bBrand.allName != ''">
                AND all_name LIKE CONCAT('%',#{bBrand.allName},'%')
            </if>

            <if test="bBrand.remark != null and bBrand.remark != ''">
                AND remark LIKE CONCAT('%',#{bBrand.remark},'%')
            </if>

            <if test="bBrand.crtBy != null ">
                AND crt_by = ${bBrand.crtBy}
            </if>

            <if test="bBrand.crtByName != null and bBrand.crtByName != ''">
                AND crt_by_name LIKE CONCAT('%',#{bBrand.crtByName},'%')
            </if>

            <if test="bBrand.crtByDtm != null ">
                AND crt_by_dtm = ${bBrand.crtByDtm}
            </if>

            <if test="bBrand.mdyBy != null ">
                AND mdy_by = ${bBrand.mdyBy}
            </if>

            <if test="bBrand.mdyByName != null and bBrand.mdyByName != ''">
                AND mdy_by_name LIKE CONCAT('%',#{bBrand.mdyByName},'%')
            </if>

            <if test="bBrand.mdyByDtm != null ">
                AND mdy_by_dtm = ${bBrand.mdyByDtm}
            </if>

            <if test="bBrand.voided != null ">
                AND voided = ${bBrand.voided}
            </if>

            <if test="bBrand.voidedBy != null ">
                AND voided_by = ${bBrand.voidedBy}
            </if>

            <if test="bBrand.voidedByName != null and bBrand.voidedByName != ''">
                AND voided_by_name LIKE CONCAT('%',#{bBrand.voidedByName},'%')
            </if>

            <if test="bBrand.voidedByDtm != null ">
                AND voided_by_dtm = ${bBrand.voidedByDtm}
            </if>

        </where>
    </sql>

    <select id="pageList" resultMap="BaseResultMap" parameterType="com.zdf.auth.model.po.BBrand">
        <include refid="selects"/>
    </select>

    <select id="list" resultMap="BaseResultMap" parameterType="com.zdf.auth.model.po.BBrand">
        <include refid="selects"/>
    </select>




    <delete id="phyDelById">
        DELETE FROM  b_brand WHERE id = ${id}
    </delete>

    <update id="logicDel">
        UPDATE b_brand SET is_deleted = 1 ,update_by = #{username}, update_time = now()
        WHERE id = ${id} AND is_deleted = 0
    </update>

    <select id="queryBBrandForExcel" resultType="java.util.LinkedHashMap">
        SELECT
            id 'id',
            en_name 'enName',
            ch_name 'chName',
            all_name 'allName',
            remark 'remark',
            crt_by 'crtBy',
            crt_by_name 'crtByName',
            crt_by_dtm 'crtByDtm',
            mdy_by 'mdyBy',
            mdy_by_name 'mdyByName',
            mdy_by_dtm 'mdyByDtm',
            voided 'voided',
            voided_by 'voidedBy',
            voided_by_name 'voidedByName',
            voided_by_dtm 'voidedByDtm'
        FROM b_brand
        WHERE is_deleted = 0
                    <if test="enName != null and enName != ''">
                        AND en_name LIKE CONCAT('%',#{enName}, '%')
                    </if>
                    <if test="chName != null and chName != ''">
                        AND ch_name LIKE CONCAT('%',#{chName}, '%')
                    </if>
                    <if test="allName != null and allName != ''">
                        AND all_name LIKE CONCAT('%',#{allName}, '%')
                    </if>
                    <if test="remark != null and remark != ''">
                        AND remark LIKE CONCAT('%',#{remark}, '%')
                    </if>
                    <if test="crtBy != null ">
                        AND crt_by = #{crtBy}
                    </if>
                    <if test="crtByName != null and crtByName != ''">
                        AND crt_by_name LIKE CONCAT('%',#{crtByName}, '%')
                    </if>
                    <if test="crtByDtm != null ">
                        AND crt_by_dtm = #{crtByDtm}
                    </if>
                    <if test="mdyBy != null ">
                        AND mdy_by = #{mdyBy}
                    </if>
                    <if test="mdyByName != null and mdyByName != ''">
                        AND mdy_by_name LIKE CONCAT('%',#{mdyByName}, '%')
                    </if>
                    <if test="mdyByDtm != null ">
                        AND mdy_by_dtm = #{mdyByDtm}
                    </if>
                    <if test="voided != null ">
                        AND voided = #{voided}
                    </if>
                    <if test="voidedBy != null ">
                        AND voided_by = #{voidedBy}
                    </if>
                    <if test="voidedByName != null and voidedByName != ''">
                        AND voided_by_name LIKE CONCAT('%',#{voidedByName}, '%')
                    </if>
                    <if test="voidedByDtm != null ">
                        AND voided_by_dtm = #{voidedByDtm}
                    </if>

    </select>

</mapper>
