<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zdf.auth.mapper.SysRoleActionDataMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.zdf.auth.model.po.SysRoleActionData">
        <id column="id" property="id" />
        <result column="role_id" property="roleId" />
        <result column="action_id" property="actionId" />
        <result column="action_code" property="actionCode" />
        <result column="menu_code" property="menuCode" />
        <result column="date_type" property="dateType" />
        <result column="remark" property="remark" />
        <result column="crt_by" property="crtBy" />
        <result column="crt_by_name" property="crtByName" />
        <result column="crt_by_dtm" property="crtByDtm" />
        <result column="mdy_by" property="mdyBy" />
        <result column="mdy_by_name" property="mdyByName" />
        <result column="mdy_by_dtm" property="mdyByDtm" />
        <result column="voided" property="voided" />
        <result column="voided_by" property="voidedBy" />
        <result column="voided_by_name" property="voidedByName" />
        <result column="voided_by_dtm" property="voidedByDtm" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, role_id, action_id, action_code, menu_code, date_type, remark, crt_by, crt_by_name, crt_by_dtm, mdy_by, mdy_by_name, mdy_by_dtm, voided, voided_by, voided_by_name, voided_by_dtm
    </sql>

    <select id="findByPage" resultType="com.zdf.auth.model.vo.SysRoleActionDataVO">
        select sra.id ,
        sra.action_code actionCode,
        sm.title title,sr.name name,
        sra.date_type dateType,
        sra.crt_by_name crtByName,
        sra.crt_by_dtm crtByDtm
        from system_role_action_data sra
        left join system_role sr on sra.role_id = sr.id
        left join system_menu sm on sra.action_id = sm.id
        where sra.voided = 0
        <if test="form.key != null and form.key != ''">
            and
            <if test="form.key == 'action_code' ">
                sra.action_code like concat('%',#{form.condition},'%')
            </if>
            <if test="form.key == 'name' ">
                sr.name like concat('%',#{form.condition},'%')
            </if>
        </if>
    </select>

    <select id="getRoleData" resultType="Integer">
        select max(sra.date_type) dataType from system_role_action_data sra
        where sra.voided = 0 and sra.role_id in
        <foreach collection="longs"  item="item" open="(" separator="," close=")"  >
            #{item}
        </foreach>
    </select>

</mapper>
